generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"  // Изменили на sqlite
  url      = "file:./dev.db"  // Убрали env() и указали файл БД
}

model Chat {
  id        Int      @id @default(autoincrement())
  username  String
  text      String
  createdAt DateTime @default(now())
}
