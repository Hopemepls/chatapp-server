generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"  // Изменили на sqlite
  url      = "file:./dev.db"  // Убрали env() и указали файл БД
}

model Chat {
  id        Int      @id @default(autoincrement())
  username  String
  text      String
  createdAt DateTime @default(now())
}
